{% extends "mgateSuiviBundle::layout.html.twig" %}

{% block title %}
    {{ 'suivi.etude_modifier'|trans({}, 'suivi') }} - {{ parent() }}
{% endblock %}

{% block content_title %}
    {{ 'suivi.etude_modifier'|trans({}, 'suivi') }}
{% endblock %}


{% block content_bundle %}

    <form method="post" {{ form_enctype(form) }}>

        {% form_theme form 'mgateSuiviBundle:Form:fields.html.twig' %}
        <table class="table table-bordered table-striped standard">
            <tr>
                <th>{{ form_label(form.knownProspect) }}</th>
                <td>{{ form_widget(form.knownProspect) }}</td>
            </tr>
            <tr>
                <th id="{{ form.newProspect.vars.id }}_block" colspan="2" class="success">{{ 'suivi.prospect_nouveau'|trans({}, 'suivi') }}</th>
            </tr>
            <tr>
                <th>{{ form_label(form.newProspect.nom) }}</th>
                <td>{{ form_widget(form.newProspect.nom) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.newProspect.entite) }}</th>
                <td>{{ form_widget(form.newProspect.entite) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.newProspect.adresse) }}</th>
                <td>{{ form_widget(form.newProspect.adresse) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.newProspect.codepostal) }}</th>
                <td>{{ form_widget(form.newProspect.codepostal) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.newProspect.ville) }}</th>
                <td>{{ form_widget(form.newProspect.ville) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.newProspect.pays) }}</th>
                <td>{{ form_widget(form.newProspect.pays) }}</td>
            </tr>
            <tr>
                <th id="{{ form.newProspect.vars.id }}_block" colspan="2" class="success">{{ 'suivi.etude_l'|trans({}, 'suivi') }}</th>
            </tr>
            <tr>
                <th>{{ form_label(form.prospect) }}</th>
                <td>{{ form_widget(form.prospect) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.nom) }}</th>
                <td>{{ form_widget(form.nom) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.description) }}</th>
                <td>{{ form_widget(form.description) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.domaineCompetence) }}</th>
                <td>{{ form_widget(form.domaineCompetence) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.sourceDeProspection) }}</th>
                <td>{{ form_widget(form.sourceDeProspection) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.mandat) }}</th>
                <td>{{ form_widget(form.mandat) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.num) }}</th>
                <td>{{ form_widget(form.num) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.confidentiel) }}</th>
                <td>{{ form_widget(form.confidentiel) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.suiveur) }}</th>
                <td>{{ form_widget(form.suiveur) }}</td>
            </tr>
        </table>
        {{ form_widget(form) }}

        <br>
        <input type="submit" value="{{ 'suivi.etude_enregistrer'|trans({}, 'suivi') }}" class="btn btn-default"/>
        <input type="submit" value="{{ 'suivi.etude_enregistrer_passer_ap'|trans({}, 'suivi') }}" name="ap" id="ap" class="btn btn-default"/>
    </form>
    <br>

    <p>
        <a href="{{ path('mgateSuivi_etude_voir', {'nom': etude.nom}) }}">{{ 'suivi.etude_retour'|trans({}, 'suivi') }}</a>
    </p>


    <form class="bootbox-confirm" data-content="{{ 'suivi.etude_supprimer_confirm'|trans({}, 'suivi') }} ?"
          action="{{ path('mgateSuivi_etude_supprimer', { 'nom': etude.nom }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger">{{ 'suivi.etude_supprimer'|trans({}, 'suivi') }}</button>
    </form>

{% endblock %}

{% block javascript %}
    {{ parent() }}
    {{ form_javascript(form) }}
    {% include "mgateSuiviBundle:DocType:selectOrNew.html.twig" with { known: form.knownProspect, knowned: form.prospect, newed: form.newProspect } %}
{% endblock %}
