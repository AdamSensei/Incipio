{% extends "MgatePubliBundle::layout.html.twig" %}

{% block content_bundle %}
    <p>Via cette page vous pouvez importer des fichiers provenant d'autres CRM. Choisissez un type de fichier et suivez
        les instructions.</p>
    {{ form_start(form, {'action': path('Mgate_publi_import')}) }}
        <div class="row">
            <div class="col-lg-2">
                {{ form_label(form.import_method) }}
            </div>
            <div class="col-lg-8">
                {{ form_widget(form.import_method) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="result"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2">
                {{ form_label(form.file) }}
            </div>
            <div class="col-lg-8">
                {{ form_widget(form.file) }}
            </div>
        </div>
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-success">Importer</button>
    {{ form_end(form) }}
{% endblock %}

{% block javascript %}
    {{ parent() }}
{% endblock %}
