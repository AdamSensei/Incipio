{# layout d'accueil pour les études  #}

{% extends "MgateDashboardBundle::layout.html.twig" %}
{% block content_bundle %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                Espace à remplir. Envoyez vos suggestions à {{ app.environment.technical_to }}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-4">
                <table class="table">
                    <tr>
                        <th colspan="2">Informations</th>
                    </tr>
                    <tr>
                        <td>Connecté en tant que</td>
                        <th>{{ app.user.username }}</th>
                    </tr>
                    <tr>
                        <td>Dernière connexion le</td>
                        <th>{{ app.user.lastLogin ? app.user.lastLogin | date ('d M Y') }}</th>
                    </tr>
                    <tr>
                        <td>Permissions</td>
                        <th>
                            {% for role in app.user.roles %}
                                <span class="badge badge-default">{{ role }}</span>
                            {% endfor %}
                        </th>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <a href="{{ path('fos_user_security_logout') }}">
                                <i class="fa fa-times"></i> Déconnexion
                            </a>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <table class="table">
                    <tr>
                        <th colspan="2">Décidez vous même des infos à présenter</th>
                    </tr>
                    <tr>
                        <th>CA en Négociation ?</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th>CA Signé ?</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th>CA Réalisé ?</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Envoyez vos suggestions à <br><a href="mailto:{{ app.environment.technical_to }}">{{ app.environment.technical_to }}</a>
                        </th>
                        <td></td>
                    </tr>
					<tr>
						<td><img src="https://insight.sensiolabs.com/projects/b2a395d1-acaa-4305-a30e-3a326fdb7c3a/big.png" title="Qualité du code du projet Jeyser-CRM"/>
					</tr>
                </table>
            </div>
            <div class="col-md-4">

            </div>
        </div>
    </div>
{% endblock %}
