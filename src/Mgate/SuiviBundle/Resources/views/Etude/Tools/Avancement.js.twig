$('body').click(function(e){
    var Elem = e.target;
    if (Elem.id == 'avancement'){
        bootbox.prompt("{{ 'suivi.avancement_developpeur'|trans({}, 'suivi') }} (%) ?", function(result) {
        if (result !== null) {
            $.ajax({
                url: "{{ path('MgateSuivi_mission_avancement') }}",
                type: "PUT",
                data: "avancement=" + result +"&id=" + $(Elem).data("etude") + "&intervenant=" + $(Elem).data("mission"),
                success: function(data){
                    var bar = $("#avancementBar-"+$(Elem).data("etude"));
                    bar.css("width",  data + "%");
                    bar.html(data + "%");
                }
            });
        }
    })
}});
