{# Formulaire d'ajout d'un prospect #}

{{ form_start(form) }}
<table class="table table-bordered table-striped standard">
    <tr>
        <th>{{ form_label(form.nom) }}</th>
        <td>{{ form_widget(form.nom) }} {{ form_errors(form.nom) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.entite) }}</th>
        <td>{{ form_widget(form.entite) }} {{ form_errors(form.entite) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.adresse) }}</th>
        <td>
            <table>
                <tr>
                    <th>Adresse</th>
                    <td> {{ form_widget(form.adresse,{ 'attr': {'cols': '50', 'rows':'3'} }) }} {{ form_errors(form.adresse) }}</td>
                </tr>
                <tr>
                    <th>Code Postal</th>
                    <td>{{ form_widget(form.codepostal) }} {{ form_errors(form.codepostal) }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ form_widget(form.ville) }} {{ form_errors(form.ville) }}</td>
                </tr>
                <tr>
                    <th>Pays</th>
                    <td>{{ form_widget(form.pays) }} {{ form_errors(form.pays) }}</td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <input type="submit" class="btn" value="Valider"/>
        </td>
    </tr>
</table>

{{ form_rest(form) }}

{{ form_end(form) }}
