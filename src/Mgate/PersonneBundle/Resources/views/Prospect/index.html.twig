{# layout d'accueil pour les Prospect  #}

{% extends "MgatePersonneBundle::layout.html.twig" %}

{% block title %}
    {{ 'prospect.prospect_list.'|trans({}, 'person') }} {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/datatables/dataTables.bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('css/datatables/dataTables.fontAwesome.css') }}">
    <link rel="stylesheet" href="{{ asset('css/datatables/responsive.bootstrap.min.css') }}">
{% endblock %}

{% block content_title %}
    {{ 'prospect.prospect_list'|trans({}, 'person') }}
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb no-margin pull-right">
        <li class="active">{{ 'prospect.prospect_list'|trans({}, 'person') }}</li>
    </ul>
{% endblock %}

{% block content_bundle %}

    <div>
        <a href="{{ path('MgatePersonne_prospect_ajouter') }}" class="btn btn-info btn-sm">
            <i class="fa fa-plus"></i> Ajouter un prospect
        </a>
    </div>
    <table class="table table-bordered table-striped dataTable dt-responsive text-left" id="listeProspects" role="grid" width="100%">
        <thead>
        <tr>
            <th>{{ 'prospect.fields.name'|trans({}, 'person') }}</th>
            <th>{{ 'prospect.fields.type'|trans({}, 'person') }}</th>
            <th>{{ 'prospect.fields.address'|trans({}, 'person') }}</th>
            <th>{{ 'prospect.fields.employee_number'|trans({}, 'person') }}</th>
        </tr>
        </thead>
        <tbody>
        {% for prospect in prospects %}
            <tr>
                <td><a href="{{ path('MgatePersonne_prospect_voir', {'id': prospect.id}) }}"> {{ prospect.nom }} </a>
                </td>
                <td>{{ prospect.entiteToString }}</td>
                <td>{{ prospect.adresse }}</td>
                <td>{{ prospect.employes | length }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('js/datatables/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/datatables/dataTables.responsive.min.js') }}"></script>
    <script src="{{ asset('js/datatables/responsive.bootstrap.min.js') }}"></script>

    <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
            $('#listeProspects').DataTable({
                "paging": false,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "aaSorting": [[0, 'desc']]
            });
        });
    </script>
{% endblock %}

