<h3>{{ 'employee.employee_list'|trans({}, 'person') }}</h3>

<table class="table table-bordered table-striped dt-responsive text-left" id="employes">
    <thead>
        <tr>
            <th>{{ 'fields.name'|trans({}, 'person') }}</th>
            <th>{{ 'fields.mail'|trans({}, 'person') }}</th>
            <th>{{ 'fields.desk_phone'|trans({}, 'person') }}</th>
            <th>{{ 'fields.mobile'|trans({}, 'person') }}</th>
            <th>{{ 'fields.position'|trans({}, 'person') }}</th>
            <th>{{ 'fields.address'|trans({}, 'person') }}/{{ 'fields.office'|trans({}, 'person') }}</th>
        </tr>
    </thead>
    <tbody>
        {% for employe in prospect.employes %}
            <tr>
                <td>
                    <a href="{{ path('MgatePersonne_employe_modifier', {'id': employe.id}) }}">
                        {{ employe.personne.nom | title }} {{ employe.personne.prenom }}
                    </a>
                </td>
                <td title="{{ employe.personne.emailEstValide ? (employe.personne.estAbonneNewsletter ? 'person.newsletter_subscribed'|trans({}, 'person') : 'person.newsletter_unsubscribed'|trans({}, 'person') ) : 'person.mail_invalid'|trans({}, 'person') }}"
                    class="{{ employe.personne.emailEstValide ? (employe.personne.estAbonneNewsletter ? "success" : "warning") : "error" }}">{{ employe.personne.email }}</td>
                <td>{{ employe.personne.fix }}</td>
                <td>{{ employe.personne.mobile }}</td>
                <td>{{ employe.poste }}</td>
                <td>
                    {{ employe.personne.adresse }}<br/>
                    {{ employe.personne.codePostal }} {{ employe.personne.ville }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div class="row">
    <div class="col-md-4 col-xs-6">
        <a href="{{ path('MgatePersonne_employe_ajouter', {'prospect_id': prospect.id}) }}" class="btn btn-primary">
            {{ 'employee.add_employee'|trans({}, 'person') }}
        </a>
    </div>
    <div class="col-md-4 col-xs-6">
        <a href="{{ path('MgatePersonne_prospect_modifier', {'id': prospect.id}) }}" class="btn btn-warning">
            {{ 'prospect.edit_prospect'|trans({}, 'person') }}
        </a>
    </div>
</div>

