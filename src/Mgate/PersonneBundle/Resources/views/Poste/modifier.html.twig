{% extends "MgatePersonneBundle::layout.html.twig" %}

{% block title %}Modifier un poste - {{ parent() }}{% endblock %}

{% block content_title %}Modifier un poste{% endblock %}

{% block content_bundle %}

    {{ form_start(form) }}

    {{ form_row(form.intitule) }}<br>
    {{ form_row(form.description) }}

    <input type="submit" class="btn"/>
    {{ form_end(form) }}

    <br>
    <br>

    <form class="bootbox-confirm" data-content="Êtes-vous sûr de vouloir supprimer définitivement ce poste ?"
          action="{{ path('MgatePersonne_poste_supprimer', { 'id': form.vars.value.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger">Supprimer le poste</button>
    </form>
{% endblock %}


