{# layout d'accueil pour les Users  #}

{% extends "MgatePersonneBundle::layout.html.twig" %}

{% block title %}Accueil - {{ parent() }}{% endblock %}

{% block content_bundle %}

    <h2>Liste des Postes</h2>

    <a href="{{ path('MgatePersonne_poste_ajouter') }}" class="btn btn-info">{{ 'dashboard.poste_ajouter'|trans({}, 'dashboard') }}</a>
    <ul>
        {% for poste in postes %}
            <li>
            <a href="{{ path('MgatePersonne_poste_voir', {'id': poste.id}) }}"> {{ poste.intitule }} </a>
            </li>
        {% else %}
            <li>Pas (encore !) de Poste</li>
        {% endfor %}
    </ul>

{% endblock %}
