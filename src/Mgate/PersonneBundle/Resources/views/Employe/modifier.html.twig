{% extends "MgatePersonneBundle::layout.html.twig" %}

{% block title %}Modifier un employé - {{ parent() }}{% endblock %}

{% block content_title %}
    Modifier un employé
{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb no-margin pull-right">
        <li>
            <a href="{{ path('MgatePersonne_prospect_homepage') }}">Liste des prospects</a>
        </li>
        <li>
            <a href="{{  path('MgatePersonne_prospect_voir', {'id': prospect.id}) }}">{{ prospect.nom }}</a>
        </li>
        <li>
            Modifier {{ form.vars.value.personne.prenomNom }}
        </li>
    </ul>
{% endblock %}


{% block content_bundle %}

    {% include "MgatePersonneBundle:Employe:formulaire.html.twig" %}

    <div class="row">
        <div class="col-md-2 col-xs-6">
            {% if is_granted('ROLE_SUIVEUR') %}
            <form class="bootbox-confirm" data-content="Êtes-vous sûr de vouloir supprimer définitivement cet employé ?"
                  action="{{ path('MgatePersonne_employe_supprimer', { 'id': form.vars.value.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button class=" btn btn-danger">Supprimer l'employé</button>
            </form>
            {% endif %}
        </div>
    </div>
{% endblock %}


